<h1>
    {{ main_title }}
    <td style="border: none; margin-left: 10px;">
        <button 
            style="margin-left: 10px;" 
            onclick="window.location.href='/admin/control'" 
        >
        돌아가기
        </button>
    </td>
</h1>

<table>
    <thead>
        <tr>
            <th>Flight_number</th>
            <th>Airline</th>
            <th>Weekdays</th>
            <th style="border: none;">
                <button 
                    onclick="toggleCreateRow()" 
                    style="margin-left: 10px;"
                >
                    Create
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        <tr id="create-row" style="display: none;">
            <form id="create-form" method="post" action="/flight">
                <td><input type="text" name="flight_number" placeholder="flight_number" required></td>
                <td><input type="text" name="airline" placeholder="airline" required></td>
                <td><input type="text" name="weekdays" placeholder="weekdays" required></td>
                <td style="border: none;">
                    <button type="submit" style="margin-left: 10px;">Insert</button>
                    <button type="button" onclick="toggleCreateRow()">Cancel</button>
                </td>
            </form>
        </tr>
        
        {{#each flight_res}}
            <tr id="row-{{Flight_number}}">
                <td>{{Flight_number}}</td>
                <td>{{Airline}}</td>
                <td>{{Weekdays}}</td>
                <td style="border: none;">
                    <button 
                        onclick="toggleEditRow('{{Flight_number}}', '{{Airline}}', '{{Weekdays}}')" 
                        style="margin-left: 10px;"
                    >
                        Update
                    </button>
                    <form method="post" action="/flight" style="display: inline;">
                        <input type="hidden" name="flight_number" value="{{Flight_number}}">
                        <input type="hidden" name="_method" value="DELETE"> 
                        <button type="submit" style="margin-left: 10px;">Delete</button>
                    </form>
                </td>
            </tr>

            <tr id="edit-row-{{Flight_number}}" style="display: none;">
                <form id="update-form-{{Flight_number}}" method="post" action="/flight">
                    <input type="hidden" name="_method" value="PUT"> 
                    
                    <td><input type="text" name="flight_number" value="{{Flight_number}}" readonly></td>
                    <td><input type="text" name="airline" value="{{Airline}}" required></td>
                    <td><input type="text" name="weekdays" value="{{Weekdays}}" required></td>
                    <td style="border: none;">
                        <button type="submit" style="margin-left: 10px;">Save</button>
                        <button type="button" onclick="toggleEditRow('{{Flight_number}}')">Cancel</button>
                    </td>
                </form>
            </tr>
        {{/each}}
    </tbody>
</table>

<script>
    function toggleCreateRow() {
        const createRow = document.getElementById('create-row');
        createRow.style.display = createRow.style.display === 'none' ? 'table-row' : 'none';
    }

    function toggleEditRow(flight_number, airline, weekdays) {
        const dataRow = document.getElementById('row-' + flight_number);
        const editRow = document.getElementById('edit-row-' + flight_number);
        
        if (editRow.style.display === 'none') {
            dataRow.style.display = 'none';
            editRow.style.display = 'table-row';

        } else {
            dataRow.style.display = 'table-row';
            editRow.style.display = 'none';
        }
    }
</script>